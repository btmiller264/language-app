{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES5",
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}